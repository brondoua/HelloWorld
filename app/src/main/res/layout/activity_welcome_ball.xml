<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_ball"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brondoua.helloworld.WelcomeBallActivity">


    <Button
        android:text="@string/play"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/button_jeux"
        android:layout_marginBottom="10dp" />


    <TextView
        android:text="@string/maxme"
        android:layout_height="20dp"
        android:id="@+id/maxpointmetext"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/velocityX"
        android:layout_height="20dp"
        android:id="@+id/velocityxtext"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <EditText
        android:layout_height="40dp"
        android:text="10"
        android:id="@+id/maxpointme"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <EditText
        android:layout_height="40dp"
        android:text="10"
        android:ems="10"
        android:id="@+id/maxpointcom"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <EditText
        android:layout_height="40dp"
        android:text="1"
        android:ems="10"
        android:id="@+id/velocityx"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/velocityY"
        android:layout_height="20dp"
        android:id="@+id/velocityytext"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <EditText
        android:layout_height="40dp"
        android:text="1"
        android:ems="10"
        android:id="@+id/velocityy"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/maxcom"
        android:layout_height="20dp"
        android:id="@+id/maxpointcomtext"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="350dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"/>


</GridLayout>
